#!/usr/bin/env bash

packages="client server database"
logfile=`pwd`"/.storage/logs/install"

prepare() {
  mkdir -p .storage/logs
}

install() {
  echo -e "\033[1mInstall dependencies\033[0m"

  for pkg in ${packages}; do
    echo -ne "- installing ${pkg} dependencies${normal}"
    cd ${pkg} && npm install 2>> ${logfile} >> ${logfile} &
    ./bin/spinner $!
  done
}

prepare
install
